extends ./template.pug
block content
  div.row.text-center
    div.col-xs-6
      div.jumbotron#black-jumbotron
        h1.text-center#black-score 0
        button.btn.btn-lg.btn-default.manipulator#black-plus +
        button.btn.btn-lg.btn-default.manipulator#black-minus -
    div.col-xs-6
      div.jumbotron#red-jumbotron
        h1.text-center#red-score 0
        button.btn.btn-lg.btn-default.manipulator#red-plus +
        button.btn.btn-lg.btn-default.manipulator#red-minus -
  div.text-center
    button.btn.btn-lg.btn-default#clear-scores Clear Scores
    button.btn.btn-lg.btn-default#shift-list Next Team
    button.btn.btn-lg.btn-default#increment-millie Ha-Ha
  include ./upnext.pug
block scripts
  script(src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/1.7.3/socket.io.min.js")
  script(src="/js/admin.js")
